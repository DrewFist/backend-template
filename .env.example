# ======================
# Server Configuration
# ======================
PORT=8000
NODE_ENV=development
LOG_LEVEL=info

# ======================
# Database
# ======================
DATABASE_URL=postgresql://postgres:postgres@localhost:${POSTGRES_PORT:-5432}/backend-template

# ======================
# OAuth - Google
# ======================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/v1/auth/oauth/google/callback

# ======================
# Security
# ======================
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=your-64-char-hex-encryption-key

# Generate with: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-min-32-chars

# ======================
# CORS
# ======================
CORS_ORIGIN=http://localhost:8000
FRONTEURL=http://localhost:8000

# ======================
# Docker Service Ports
# ======================
POSTGRES_PORT=5432
PROMETHEUS_PORT=9090
GRAFANA_PORT=8001
METRICS_SERVER_PORT=3002
